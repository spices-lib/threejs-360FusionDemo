/*****************************************Pre Compile**********************************************/

#define version 460

#define FOV 90.0f

/***************************************************************************************************/

/*****************************************Vertex Output*********************************************/

varying vec2 fragUV;      /* @brief Fragment Texture Coordinate */
varying mat4 PV;
varying vec3 localpos;

/**************************************************************************************************/

/*****************************************Shader Entry*********************************************/

void main()
{
    fragUV = uv / vec2(1023.0f, 1023.0f);
    fragUV.y *= -1.0f;

    PV = projectionMatrix * modelViewMatrix;
    localpos = position;

    gl_Position = PV * vec4(position, 1.0);
}

